<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="dialogBean"
            type="lin.com.bookreader.entity.DialogSelectBean" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_dialog_select_background">

        <TextView
            android:id="@+id/dialog_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@{dialogBean.title}"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dialog_select_seperator_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/main_bottom_view_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_select_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialog_select_rcv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:itemDecoration="@{dialogBean.itemDecoration}"
            app:itemLayout="@{@layout/item_dialog_select}"
            app:items="@{dialogBean.list}"
            app:layoutManager="@string/linear_layout_manager"
            app:onBindItem="@{(databinding,data,positon)->dialogBean.bind(databinding,data,positon)}"
            app:layout_constraintBottom_toTopOf="@+id/dialog_select_previous_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_select_seperator_line" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_select_previous_btn"
            style="@style/MainStyleButton"
            android:text="@{dialogBean.leftBtn.text}"
            android:visibility="@{dialogBean.leftBtn.visible?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dialog_select_next_btn"
            android:onClick="@{(v)->dialogBean.leftBtn.onClick(v)}"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_select_next_btn"
            style="@style/MainStyleButton"
            android:text="@{dialogBean.rightBtn.text}"
            android:visibility="@{dialogBean.rightBtn.visible?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_select_previous_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="@{(v)->dialogBean.rightBtn.onClick(v)}"
            app:layout_constraintStart_toEndOf="@+id/dialog_select_previous_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>